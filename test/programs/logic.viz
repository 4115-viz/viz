// want an if with elif statement too

func main(): none {
    @@x: int = 5;
    @@y: bool = true;

    /*
        if/else
    */
    if (3 < 4) {
        print("this is true");
        
        /*
            nested if/else
        */
        if (true) {
            print("nested if");
        } else {
            print("nested else");
        }
    
    } else {
        print("this is false");
        
        /* 
            if/no else
        */
        if (true) {
            print("nested if with no else stmt");
        }
    }

    /*
        else if
    */

    if (@x < 5) {
        print("x is less than 5");
    } elif (@x == 5) {
        print("x is equal to 5");
    } elif (@y == true) {
        print("testing multiple elif, @y is true");
    } else {
        print("x is larger than 5");
    }

    /*
        lets try ternary if / else
    */
    true == true ? print("correct") : print("incorrect")
    
    // these are now errors
    //1 < 2 ? print("yes"); : print("no");
    //false == false ? while (true) { print("correct"); print("yay"); } : print("incorrect")
}

