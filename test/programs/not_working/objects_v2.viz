class: Person {
    @name: string;
    @age: int;
    @height: string;
    @weight: float;
}

func init_shape(@my_shape: Shape, @height: int, @width: int) : none {
    @my_shape.height = @height;
    @my_shape.width = @width;
}

func init_person(@my_person: Person, @name: string, @age: int, @height: string, @weight: float) : none {
    @my_person.name = @name;
    @my_person.age = @age;
    @my_person.height = @height;
    @my_person.weight = @weight;
}

