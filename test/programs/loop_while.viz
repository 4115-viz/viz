func main(): none {
    
    // variable decls
    //@@i: int = 0; // this doesnt work yet
    @@i: int;
    @i = 0;

    print("==========================");
    print("loop counting up");    
    // normal while loop construct
    while (@i < 10) {
        print(@i);
        @i = @i + 1;
    }

    print("==========================");
    print("loop counting down");
    while (@i > 0) {
        print(@i);
        @i = @i - 1;
    }
}