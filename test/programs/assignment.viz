// testing complex assignment
func main(): none {
    
    @@a: int;
    @@b: float;
    @a = 10;
    @b = 10.5;
    
    // float 
    print("testing complex assingment for floats");
    @b += 1.0;
    print_float(@b);
    @b -= 1.1;
    print_float(@b);
    @b *= 1.1;
    print_float(@b);
    @b /= 1.1;
    print_float(@b);
    
    // This is an error now
    //@b %= 1.1;
    //print_float(@b);

    // int 
    print("testing complex assingment for ints");
    @a += 1;
    print_int(@a);
    @a -= 1;
    print_int(@a);
    @a *= 1;
    print_int(@a);
    @a /= 1; 
    print_int(@a);
    @a %= 1;
    print_int(@a); 

    // assigneq with an expr on right hand side
    print("testing complex assingment (with expr on rhs) for ints");
    @a += 1+5;
    print_int(@a); 
    @a -= 1*5;
    print_int(@a); 
    @a *= 1%5; 
    print_int(@a); 

}