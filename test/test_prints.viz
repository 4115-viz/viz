func main(): none {
    @@a: int = 10;
    @@b: float = -10.5;

    // float 
    print("testing complex assingment for floats");
    @b += 1.0;
    print_float(@b);
    @b -= 1.1;
    print_float(@b);
    @b *= 1.1;
    print_float(@b);
    @b /= 1.1;
    print_float(@b);
    @b %= 1.1;

    // int 
    print("testing complex assingment for ints");
    @a += 1;
    print_int(@a);
    @a -= 1;
    print_int(@a);
    @a *= 1;
    print_int(@a);
    @a /= 1; 
    print_int(@a);
    @a %= 1;
    print_int(@a); 

    // assigneq with an expr on right hand side
    print("testing complex assingment (with expr on rhs) for ints");
    @a += 1+5;
    print_int(@a); 
    @a -= 1*5;
    print_int(@a); 
    @a *= 1%5; 
    print_int(@a);
}